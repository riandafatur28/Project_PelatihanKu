<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboardFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:paddingBottom="2dp"
    tools:context=".MainActivity">
    <!-- Text Salam -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <!-- TextView di sebelah kiri -->
        <TextView
            android:id="@+id/salamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:paddingBottom="2dp"
            android:layout_marginStart="24dp"
            android:text="Halo, "
            android:textColor="@color/font_black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- ImageView berbentuk lingkaran di sebelah kanan -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="200dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/rounded_background"
            android:scaleType="centerCrop"
            android:src="@drawable/gambar_user" />
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imagepage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/corousel"/>
            </androidx.cardview.widget.CardView>


            <!-- Text untuk Tinjauan -->
            <TextView
                android:id="@+id/textTinjauan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="32dp"
                android:fontFamily="@font/inter_medium"
                android:text="Tinjauan Manajemen Pelatihan"
                android:textColor="@color/font_black"
                android:textSize="16sp" />

            <!-- Horizontal Scroll View untuk Tombol -->
            <HorizontalScrollView
                android:id="@+id/buttonHorizontal"
                android:layout_width="370dp"
                android:layout_height="92dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="16dp"
                android:paddingTop="16dp"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textTinjauan">

                <LinearLayout
                    android:id="@+id/buttonLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Tombol 1 -->
                    <LinearLayout
                        android:id="@+id/button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Icon"
                            android:src="@drawable/vocational_1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_line1_button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Memiliki Total 10"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_line2_button1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Kejuruan"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tombol 2 -->
                    <LinearLayout
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Icon"
                            android:src="@drawable/program_1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_line1_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Memiliki Total 80"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_line2_button2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Program"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tombol 3 -->
                    <LinearLayout
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Icon"
                            android:src="@drawable/building_1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_line1_button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Memiliki Total 5"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_line2_button3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Bangunan"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Tombol 4 -->
                    <LinearLayout
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/button_background"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Icon"
                            android:src="@drawable/tools_1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_line1_button4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Memiliki Total 600"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/text_line2_button4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/inter_regular"
                                android:text="Peralatan Penunjang"
                                android:textColor="@color/font_tint"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Text "Tentang" -->
            <TextView
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="32dp"
                android:paddingBottom="12dp"
                android:fontFamily="@font/inter_medium"
                android:text="Tentang"
                android:textColor="@color/font_black"
                android:textSize="16sp" />

            <!-- Layout Tombol -->
            <androidx.cardview.widget.CardView
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageContent"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/balai_img"
                        app:layout_constraintEnd_toStartOf="@+id/container_linear"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintWidth_percent="0.5"
                        app:shapeAppearanceOverlay="@style/RoundedImageView" />

                    <LinearLayout
                        android:id="@+id/container_linear"
                        android:layout_width="210dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <!-- Line 1 of Button Text -->
                        <TextView
                            android:id="@+id/text_line_buttonContent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/inter_bold"
                            android:text="Balai Latihan Kerja"
                            android:textColor="@color/font_black"
                            android:textSize="15sp" />

                        <!-- Line 2 of Button Text -->
                        <TextView
                            android:id="@+id/text_line2_buttonContent"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="7dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Unit pelaksanaan teknis dari pemerintah daerah di indonesia yang bertugas melaksanakan pelatihan kerja."
                            android:textColor="@color/font_black"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/btn_lebihBanyak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Lebih Banyak"
                            android:textColor="@color/blue"
                            android:textSize="12sp"
                            android:clickable="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:background="@android:color/transparent" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Text Maps -->
            <TextView
                android:id="@+id/textMaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingTop="32dp"
                android:paddingBottom="16dp"
                android:fontFamily="@font/inter_medium"
                android:text="Temukan Kami di"
                android:textColor="@color/font_black"
                android:textSize="16sp" />

            <!-- Gambar Maps -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:padding="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imagepageMaps"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/corousel"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
