<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/otpFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".FragmentOTP">

        <!-- LinearLayout untuk teks Lupa Kata Sandi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Text Verifikasi Kode OTP -->
            <TextView
                android:id="@+id/textverifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Verifikasi"
                android:textColor="@color/font_black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Text Kode OTP -->
            <TextView
                android:id="@+id/textKodeOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:text="Kode OTP"
                android:textColor="@color/font_black"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="72dp"
            android:layout_marginEnd="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/kodeOtp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kodeOtp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kodeOtp3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kodeOtp4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kodeOtp5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/kodeOtp6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:hint="*"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp">

            <!-- Opsi Lain -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingVertical="16dp"
                android:text="* Anda Belum Menerima email?"
                android:textColor="@color/font_tint"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/kirimUlang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:paddingVertical="16dp"
                android:text="@string/kirim_ulang"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- LinearLayout untuk Button Kirim -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- Button Kirim -->
            <Button
                android:id="@+id/button_kirim"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@color/orange"
                android:text="Kirim"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_semibold"
                android:text="Kembali"
                android:textAlignment="center"
                android:textColor="#FE9128"
                android:textSize="16sp"
                app:backgroundTint="@color/common_google_signin_btn_tint"
                app:cornerRadius="50dp"
                app:rippleColor="#E1E1E1"
                app:strokeColor="#FFA726"
                app:strokeWidth="1.2dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
