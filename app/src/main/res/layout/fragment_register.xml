<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".FragmentRegister"
    android:background="@color/white">

    <!-- Icon gambar -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitXY"
        android:layout_gravity="end"
        android:src="@drawable/logo"
        android:layout_marginTop="16dp" />

    <!-- Text Salam -->
    <TextView
        android:id="@+id/salamText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo,ðŸ‘‹"
        android:fontFamily="@font/inter_bold"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="26sp"
        android:textColor="@color/font_black"
        android:layout_gravity="start"
        android:paddingBottom="8dp" />

    <!-- Text Sub Salam -->
    <TextView
        android:id="@+id/tekssalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan memasukkan data diri anda untuk membuat akun di pelatihanKu"
        android:textSize="16sp"
        android:fontFamily="@font/inter_regular"
        android:paddingBottom="16dp" />

    <!-- EditText Nama -->
    <EditText
        android:id="@+id/inputNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Nama Panjang"
        android:textColor="@color/font_black"
        android:inputType="textPersonName"
        android:backgroundTint="@color/font_tint"
        android:padding="12dp" />

    <!-- EditText Email -->
    <EditText
        android:id="@+id/inputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Email"
        android:textColor="@color/font_black"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/font_tint"
        android:padding="12dp" />

    <!-- FrameLayout for Password EditText and Eye Icon -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingEnd="8dp">

        <!-- EditText Kata Sandi -->
        <EditText
            android:id="@+id/inputpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kata Sandi"
            android:inputType="textPassword"
            android:paddingEnd="48dp"
            android:textColor="@color/font_black"
            android:backgroundTint="@color/font_tint"
            android:padding="12dp"
            android:focusable="true" /> <!-- Fokus dapat diatur di sini -->

        <!-- Icon Visibility untuk Password -->
        <ImageView
            android:id="@+id/iconinputpassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/eye_icon"
            android:tint="@color/font_tint"
            android:contentDescription="Toggle Password Visibility"
            android:clickable="true" /> <!-- Menambahkan clickable -->
    </FrameLayout>

    <!-- FrameLayout for Confirm Password EditText and Eye Icon -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingEnd="8dp">

        <!-- EditText Konfirmasi Kata Sandi -->
        <EditText
            android:id="@+id/KonfirmasiPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Konfirmasi Kata Sandi"
            android:inputType="textPassword"
            android:paddingEnd="48dp"
            android:textColor="@color/font_black"
            android:backgroundTint="@color/font_tint"
            android:padding="12dp"
            android:focusable="true" /> <!-- Fokus dapat diatur di sini -->

        <!-- Icon Visibility untuk Konfirmasi Password -->
        <ImageView
            android:id="@+id/iconkonfirmpassword"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:src="@drawable/eye_icon"
            android:tint="@color/font_tint"
            android:contentDescription="Toggle Confirm Password Visibility"
            android:clickable="true" /> <!-- Menambahkan clickable -->
    </FrameLayout>

    <!-- Button Register -->
    <Button
        android:id="@+id/buttonregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buat Akun"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:fontFamily="@font/inter_semibold"
        android:backgroundTint="@color/orange"
        android:layout_marginTop="32dp"
        android:padding="12dp" />

    <!-- LinearLayout Login dengan Google -->
    <LinearLayout
        android:id="@+id/logindengangoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:padding="12dp"
        android:elevation="2dp"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/iconGoogle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/google"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/tekGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Daftar dengan Google"
            android:textColor="@color/font_black"
            android:fontFamily="@font/inter_light"
            android:textSize="16sp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- TextView Sudah punya akun -->
    <TextView
        android:id="@+id/apakahpunyaakun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signin_text"
        android:textColor="@color/font_black"
        android:fontFamily="@font/inter_regular"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp" />
</LinearLayout>
