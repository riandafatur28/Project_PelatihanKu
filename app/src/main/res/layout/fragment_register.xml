<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:orientation="vertical"
        android:padding="12dp"
        tools:context=".FragmentRegister">

        <!-- Icon gambar -->
        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/vector_logo" />

        <!-- Text Salam -->
        <TextView
            android:id="@+id/salamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:paddingBottom="8dp"
            android:text="Halo, SahabatðŸ‘‹"
            android:textColor="@color/font_black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <!-- Text Sub Salam -->
        <TextView
            android:id="@+id/tekssalam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:paddingBottom="16dp"
            android:text="Silahkan memasukkan data diri anda untuk membuat akun di pelatihanKu"
            android:textSize="16sp" />

        <!-- EditText Nama -->
        <EditText
            android:id="@+id/inputNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#EEF2F6"
            android:hint="Nama Panjang"
            android:text="Ridho Nur"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/font_black" />

        <Spinner
            android:id="@+id/jenisKelamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/font_tint" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="#EEF2F6" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp">

            <!-- EditText untuk menampilkan tanggal -->
            <EditText
                android:id="@+id/inputTanggal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEF2F6"
                android:clickable="true"
                android:focusable="false"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:padding="12dp"
                android:textColor="@color/font_black" />

            <!-- Icon Kalender untuk membuka DatePicker -->
            <ImageView
                android:id="@+id/iconKalender"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:contentDescription="Pilih Tanggal"
                android:src="@drawable/vector_calendar"
                app:tint="@color/font_tint" />
        </FrameLayout>

        <EditText
            android:id="@+id/inputNoTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:text="085675435678"
            android:backgroundTint="#EEF2F6"
            android:hint="No. Telp"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="@color/font_black" />

        <EditText
            android:id="@+id/inputAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#EEF2F6"
            android:hint="Alamat"
            android:text="Nganjuk"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/font_black" />

        <!-- EditText Email -->
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:backgroundTint="#EEF2F6"
            android:hint="Email"
            android:text="ridho@gmail.com"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/font_black" />

        <!-- FrameLayout for Password EditText and Eye Icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp">

            <!-- EditText Kata Sandi -->
            <EditText
                android:id="@+id/inputpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEF2F6"
                android:focusable="true"
                android:hint="Kata Sandi"
                android:text="Ridho123"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingEnd="48dp"
                android:textColor="@color/font_black" />

            <!-- Icon Visibility untuk Password -->
            <ImageView
                android:id="@+id/iconInputPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="8dp"
                app:tint="@color/font_tint"
                android:clickable="true"
                android:contentDescription="Toggle Password Visibility"
                android:src="@drawable/vector_eye_open" />
        </FrameLayout>

        <!-- FrameLayout for Confirm Password EditText and Eye Icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingEnd="8dp">

            <!-- EditText Konfirmasi Kata Sandi -->
            <EditText
                android:id="@+id/KonfirmasiPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEF2F6"
                android:focusable="true"
                android:hint="Konfirmasi Kata Sandi"
                android:text="Ridho123"
                android:inputType="textPassword"
                android:padding="12dp"
                android:paddingEnd="48dp"
                android:textColor="@color/font_black" />

            <!-- Icon Visibility untuk Konfirmasi Password -->
            <ImageView
                android:id="@+id/iconConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="4dp"
                app:tint="@color/font_tint"
                android:clickable="true"
                android:contentDescription="Toggle Password Visibility"
                android:src="@drawable/vector_eye_open" />
        </FrameLayout>

        <!-- Button Register -->
        <Button
            android:id="@+id/buttonregister"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/orange"
            android:fontFamily="@font/inter_semibold"
            android:text="Buat Akun"
            android:textAllCaps="false"
            android:textColor="@color/white_bg"
            android:textSize="18sp" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:fontFamily="@font/inter_regular"
                android:text="Sudah memiliki akun?"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtMasuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/inter_bold"
                android:gravity="center"
                android:padding="4dp"
                android:text="MASUK"
                android:textColor="@color/orange"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
