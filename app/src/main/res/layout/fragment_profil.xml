<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/containerProfil"
    tools:context=".FragmentProfil">

    <!-- LinearLayout untuk Profil dan Garis Horizontal -->
    <LinearLayout
        android:id="@+id/layerprofil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="24dp">

        <!-- Text Profil -->
        <TextView
            android:id="@+id/textProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/inter_medium"
            android:text="Profil"
            android:textSize="24sp" />

        <!-- Garis Horizontal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/font_tint" />

    </LinearLayout>

    <!-- ScrollView di atas Gambar Profil -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Gambar Profil di bawah ScrollView -->
            <ImageView
                android:id="@+id/imageProfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/gambar_user"
                android:layout_gravity="center"
                android:background="@drawable/rounded_background"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/namaUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama User"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="18sp"
                android:textColor="@color/font_tint" />

            <!-- Linear Layout untuk Nama dan Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Text Nama -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/namaProfil"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:text="Nama Panjang"
                    android:textColor="@color/font_tint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/font_tint" />

                <!-- Text Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/emailProfil"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="18dp"
                    android:text="Email"
                    android:textColor="@color/font_tint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/font_tint" />

                <!-- Text TTL -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TTLProfil"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="18dp"
                    android:text="Tempat / Tanggal Lahir"
                    android:textColor="@color/font_tint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/font_tint" />

                <!-- Text No. Telp -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/NotelpProfil"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="18dp"
                    android:text="No. Telp"
                    android:textColor="@color/font_tint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/font_tint" />

                <!-- Text Alamat -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/alamatProfil"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:layout_marginTop="18dp"
                    android:text="Alamat"
                    android:textColor="@color/font_tint"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:background="@color/font_tint" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Button Register -->
                <Button
                    android:id="@+id/buttonperbaruiProfil"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="8dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/inter_bold"
                    android:gravity="center"
                    android:text="Perbarui Profil"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

                <LinearLayout
                    android:id="@+id/buttonKeluar"
                    android:layout_width="270dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/button_background2"
                    android:gravity="center"
                    android:padding="12dp"
                    android:elevation="2dp"
                    android:stateListAnimator="@null">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keluar"
                        android:textAllCaps="false"
                        android:textColor="@color/font_black"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="16sp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
