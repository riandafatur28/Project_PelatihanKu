<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style untuk Background Tombol -->
    <style name="buttonBg" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/icon_selector</item>
    </style>

    <!-- Style untuk Gambar dengan Rounded Corners -->
    <style name="RoundedImageView">
        <item name="android:shape">rectangle</item>
        <item name="android:radius">50dp</item>
    </style>

    <!-- Style untuk Bottom Navigation View -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">100%</item>
    </style>

</resources>
